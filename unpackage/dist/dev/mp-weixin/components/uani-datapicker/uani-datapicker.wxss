.icon1 {
  z-index: 99;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30px;
}
.select-box {
  width: 100%;
  position: relative;
}
.title {
  width: 100%;
  text-align: center;
}
.popfor {
  overflow-y: scroll;
  height: 70vh;
}
.uni-data-tree-cover {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  z-index: 100;
}
.uni-data-tree-dialog {
  position: fixed;
  left: 0;
  top: 20%;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  display: flex;
  flex-direction: column;
  z-index: 102;
  overflow: hidden;
  transition: top 0.3s ease-in-out;
}
.uni-data-tree-dialog-show {
  top: 20%;
  transition: top 0.3s ease-in-out;
}
.popupbox {
  background: white;
  display: flex;
  flex-direction: column;
  padding: 15px 10px;
  border-radius: 15px 15px 0 0;
}
.popitem {
  font-size: 16px;
  min-height: 30px;
  padding: 5px 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.poptext {
  margin-left: 5px;
  padding-bottom: 2px;
}
.popitem:active {
  background: #f7f7f7;
}
.poploading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.emptying {
  color: #7a7a7a;
  font-size: 20px;
  margin-right: 30px;
  margin-bottom: 30px;
}
.loading {
  width: 30px;
  height: 30px;
  border: 2px solid #7a7a7a;
  border-top-color: transparent;
  border-radius: 100%;
  margin-right: 30px;
  margin-bottom: 30px;
  animation: circle infinite 0.75s linear;
}
.line {
  background: rgba(0, 0, 0, 0.1);
  width: 85%;
  height: 1px;
  margin: 0 auto;
}

/* 	// 转转转动画 */
@keyframes circle {
0% {
    transform: rotate(0);
}
100% {
    transform: rotate(360deg);
}
}
.disable:disabled {
  background-color: #fff !important;
}
.uni-easyinput {
  color: #000 !important;
}
.uni-easyinput .is-disabled {
  background-color: #fff !important;
  color: #000 !important;
}
.custom-disabled-class {
  color: #000;
  background-color: red;
}