page {
  background: white;
}
.mymap {
  width: 100vw;
  height: 40vh;
  position: fixed;
}
.top_bt {
  width: 60px;
  height: 30px;
  background: #3d87ff;
  color: white;
  margin-left: 10px;
  font-size: 15px;
  line-height: 30px;
}
.listbt {
  width: 40%;
  height: 30px;
  background: #3d87ff;
  margin: 3px auto;
  color: white;
  font-size: 14px;
  text-align: center;
  border-radius: 6px;
  line-height: 30px;
}
.customCallout {
  background-color: #e51860;
  color: white;
  border-radius: 30px;
  font-size: 1em;
  width: auto;
  height: auto;
  display: inline-block;
  flex-direction: row;
  padding: 15px;
  margin: 0 auto;
}
.mapbody {
  width: 100%;
  height: 70vh;
  position: fixed;
  background: white;
  bottom: 0;
  z-index: 9;
  border-radius: 25px 25px 0 0;
}
.scrolly {
  width: 200px;
  height: 95vh;
}
.imagesview {
  width: 260px;
  height: 180px;
  margin: 0 auto;
  display: flex;
